# Environment Configuration
NODE_ENV=development
PORT=5000

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# Department Webhook URLs (configure these to send data to respective departments)
# Chennai Police Department
POLICE_WEBHOOK_URL=http://localhost:4000/smart-city-webhook/police
# Urbaser Sumeet Cleaning Services
CLEANING_WEBHOOK_URL=http://localhost:4000/smart-city-webhook/cleaning
# Tamil Nadu Pollution Control Board
TNPCB_WEBHOOK_URL=http://localhost:4000/smart-city-webhook/environment
# Greater Chennai Corporation
MUNICIPAL_WEBHOOK_URL=http://localhost:4000/smart-city-webhook/municipal

# Security Configuration
ENCRYPTION_KEY=your-32-character-encryption-key-here
JWT_SECRET=your-jwt-secret-key-here

# Database Configuration (if needed for future extensions)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=smart_city
# DB_USER=postgres
# DB_PASSWORD=password

# Simulation Configuration
SIMULATION_INTERVAL=2000
DEVICE_UPDATE_INTERVAL=30000
SECURITY_CHECK_INTERVAL=5000

# Department Broadcasting Configuration
DEPARTMENT_BROADCAST_INTERVAL=300000

# Energy Calculation Constants
CO2_PER_MB=0.5
EDGE_PROCESSING_EFFICIENCY=0.8

# Alert Configuration
MAX_ALERTS=1000
ALERT_RETENTION_HOURS=24

# Logging
LOG_LEVEL=info
LOG_FILE=smart_city.log
